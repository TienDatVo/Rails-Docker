<nav class="header_nav">
   <div class="header_left">
     <button type="button" id="sidebarCollapse" class="btn btn-primary">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-list" viewBox="0 0 16 16">
         <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"/>
       </svg>
       <span class="sr-only">Toggle Menu</span>
     </button>
     <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
         <i class="fa fa-bars"></i>
     </button>
    <% if admin_user? %>

    <% else %>
      <div class="customer_cart" style="display: flex; justify-content: end;" id= "btn_cart">
        <%= button_to "", cart_invoices_path, method: :get, class: "btn btn-danger"%>
        <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 576 512"><!--! Font Awesome Free 6.4.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. --><style>svg{fill:#ffffff}</style><path d="M0 24C0 10.7 10.7 0 24 0H69.5c22 0 41.5 12.8 50.6 32h411c26.3 0 45.5 25 38.6 50.4l-41 152.3c-8.5 31.4-37 53.3-69.5 53.3H170.7l5.4 28.5c2.2 11.3 12.1 19.5 23.6 19.5H488c13.3 0 24 10.7 24 24s-10.7 24-24 24H199.7c-34.6 0-64.3-24.6-70.7-58.5L77.4 54.5c-.7-3.8-4-6.5-7.9-6.5H24C10.7 48 0 37.3 0 24zM128 464a48 48 0 1 1 96 0 48 48 0 1 1 -96 0zm336-48a48 48 0 1 1 0 96 48 48 0 1 1 0-96z"/></svg>
      </div>
      <div class="container_search">
        <%= form_with(url: root_url, method: "get", class: "form-inline") do |form| %>
          <div class="form_search">
            <%= form.text_field :search, class: "form-control", placeholder: "Search", aria_label: "Search" %>
            <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512"><!--! Font Awesome Free 6.4.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. --><style>svg{fill:#000000}</style><path d="M416 208c0 45.9-14.9 88.3-40 122.7L502.6 457.4c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L330.7 376c-34.4 25.2-76.8 40-122.7 40C93.1 416 0 322.9 0 208S93.1 0 208 0S416 93.1 416 208zM208 352a144 144 0 1 0 0-288 144 144 0 1 0 0 288z"/></svg>
            <%= form.submit "Search", class: "btn btn-primary" %>
          </div>
        <% end %>

      </div>
    <% end %>
    <div class="convert_i18n">
      <%= link_to "EN", locale: "en" %>
      <%= link_to "VN", locale: "vi" %>
    </div>
   </div>

   <div class="header_right">
    <%= button_to logged? ? "Logout" : "Login",
                  logged? ? logout_path : login_path,
                  method: :get,
                  class: logged? ? "btn btn-dark" : "btn btn-danger"
    %>
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-in-right" viewBox="0 0 16 16">
      <path fill-rule="evenodd" d="M6 3.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-2a.5.5 0 0 0-1 0v2A1.5 1.5 0 0 0 6.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-8A1.5 1.5 0 0 0 5 3.5v2a.5.5 0 0 0 1 0v-2z"/>
      <path fill-rule="evenodd" d="M11.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H1.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z"/>
    </svg>
   </div>
</nav>
<style>

  .convert_i18n {
    margin-left: 16px;
    display: flex;
  }

  .convert_i18n a {
    border-radius: 0.25rem;
    margin-right: 8px;
    padding: 6px 10px;
    color: white;
    background-color: red;
  }

  .convert_i18n a:nth-child(1) {
    background-color: black;
  }

  #btn_cart form input{
    background-color: red;
    border-radius: 50%;
    padding: 2px 14px;
  }

  .header_nav {
    display: flex;
    justify-content: space-between;
    position: fixed;
    z-index: 1;
    width: calc(100vw - 315px);
    padding: 15px 25px 12px 0;
    background: #fff;
    border: none;
    border-radius: 0;
    box-shadow: 0 0.46875rem 2.1875rem rgba(4,9,20,.03), 0 0.9375rem 1.40625rem rgba(4,9,20,.03), 0 0.25rem 0.53125rem rgba(4,9,20,.05), 0 0.125rem 0.1875rem rgba(4,9,20,.03);
  }

  .header_left {
    display: flex;
    padding-right: 15px;
    padding-left: 15px;
  }

  .container_search {
    margin-left: 12px;
  }

  .header_right {
    position: relative;
  }

  .header_right input{
    padding-left: 36px;
  }

  .header_right svg {
    position: absolute;
    top: 10px;
    left: 10px;
    fill: white;
  }

  .header_right input{
    font-size: 15px;
  }

  .form-inline .form-control {
    padding-left: 32px;
  }

  #sidebarCollapse {
    margin: 0;
  }
</style>

