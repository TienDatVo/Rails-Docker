<h1>Edit Category</h1>
<%= form_for([:admin, @category], data: { turbo: false }) do |f| %>
  <%= f.label :name_category %>
  <%= f.text_field :name_category, class: 'form-control' %>
    <div class="form-group">
    <%= f.label :status %>
    <%= f.select :status, options_for_select(Category.statuses.except(:delete_category).map { |key, value| [key.capitalize, value] }, Category.statuses[@category.status]) %>
  </div>
 <%= f.submit "update changes", class: "btn btn-primary" %>
<% end %>

<style>
  label {
    color: black;
    font-weight: bold;
  }
</style>
