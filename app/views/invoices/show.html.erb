<h3><%= t('language.invouce_detail') %>: <%= @invoice.id %></h3>

<p style="color: black"><strong><%= t('language.order_creation_date') %>:</strong> <%= @invoice.created_at.strftime("%d/%m/%Y") %></p>
<p style="color: black"><strong><%= t('language.address') %>:</strong> <%= @invoice.address %></p>
<p style="color: black"><strong><%= t('language.phone') %>:</strong> <%= @invoice.phone %></p>

<% if @invoice.invoice_details.empty? %>
  <p>Chưa có thông tin chi tiết.</p>
<% else %>
  <div>

  </div>
  <table class="table table-success table-hover">
    <thead>
      <tr>
        <th><%= t('language.number_order') %></th>
        <th><%= t('language.name_book') %></th>
        <th><%= t('language.price') %></th>
        <th><%= t('language.quantity') %></th>
        <th><%= t('language.into_money') %></th>
      </tr>
    </thead>
    <tbody>
      <% @invoice.invoice_details.each_with_index do |detail, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= detail.book.name_book %></td>
          <td><%= detail.price %></td>
          <td><%= detail.quantity %></td>
          <td><%= detail.price * detail.quantity %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>